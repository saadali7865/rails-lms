<%= form_with model: book do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category, Book.categories.keys.map { |category| [category.humanize, category] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>